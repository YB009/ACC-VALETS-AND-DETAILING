<section class="hero" id="home">
    <div class="hero-text">
      <h1 class="hero-title">VALETS & DETAILING</h1>
      <p>Premium Mobile and Unit Car Valeting</p>
      <a href="#booking" class="btn">Book Now</a>
    </div>
    <div class="hero-img"></div>
  </section>
  
  <section id="services" class="section">
    <h2>Our Services</h2>
    <div class="cards">
      <div class="card">Interior Detailing</div>
      <div class="card">Exterior Polishing</div>
      <div class="card">Ceramic Coating</div>
      <div class="card">Engine Bay Cleaning</div>
    </div>
  </section>
  
  <section id="why" class="section dark">
    <h2>Why Choose Us</h2>
    <div class="cards">
      <div class="card">Trusted & Insured</div>
      <div class="card">10-Year Protection</div>
      <div class="card">Mobile Service</div>
      <div class="card">Pro Tools & Products</div>
    </div>
  </section>
  
  <section id="booking" class="section">
    <h2>Book Your Service</h2>
    <form>
      <input type="text" placeholder="Full Name" required>
      <input type="tel" placeholder="Phone Number" required>
      <select required>
        <option value="">Select Service</option>
        <option>Full Valet</option>
        <option>Exterior Polish</option>
        <option>Interior Detail</option>
        <option>Ceramic Coating</option>
      </select>
      <button type="submit" class="btn">Submit</button>
    </form>
  </section>
  
  <section id="reviews" class="section dark">
    <h2>What Clients Say</h2>
    <p>⭐ 100% recommend (50+ Reviews)</p>
    <blockquote>
      “Brilliant job on Ken's Ranger… even…”<br>
      — Anne Rodger
    </blockquote>
  </section>
  
  <section id="about" class="section">
    <h2>About ACC Valets & Detailing</h2>
    <p>We specialize in paint enhancement and ceramic coatings. Fully insured and trusted by our community in Auchterarder & Perth. Our attention to detail is unmatched, and customer satisfaction is our priority.</p>
  </section>
  
  <section id="gallery" class="section dark">
    <h2>Photos of Our Work</h2>
    <div class="gallery">
      <% for(let i = 1; i <= 8; i++) { %>
        <img src="/images/work<%= i %>.jpg" alt="ACC work <%= i %>">
      <% } %>
    </div>
  </section>
  
  <section id="location" class="section">
    <h2>Location</h2>
    <div class="map-container">
      <iframe
        src="https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d2312.423947962303!2d-1.3957746!3d54.9049709!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x487e65a2cee47185%3A0x34e0eb8e09017557!2sACC%20valeting%20and%20detailing!5e0!3m2!1sen!2suk!4v1692023053137"
        width="100%" height="300" style="border:0;" allowfullscreen loading="lazy">
      </iframe>
    </div>
  </section>
  
  <section id="follow" class="section dark">
    <h2>Follow Us</h2>
    <p>
      <a href="https://www.instagram.com/acc_valets_and_detailing/" target="_blank">Instagram</a> |
      <a href="https://www.facebook.com/accvaletsandetailing/" target="_blank">Facebook</a>
    </p>
  </section>
  